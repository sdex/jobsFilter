{
    "name": "Upwork Helper",
    "version": "1.3.1",
    "description": "Upwork Helper",
    "homepage_url": "https://sdex.dev",
    "author": "Yuriy",
    "manifest_version": 2,
    "permissions": [
        "storage"
    ],
    "browser_action": {
        "default_title": "Upwork Helper",
        "default_popup": "src/popup/popup.html",
        "default_icon": {
            "16": "assets/icon.16.png",
            "48": "assets/icon.48.png",
            "128": "assets/icon.128.png"
        }
    },
    "content_scripts": [
        {
            "run_at": "document_end",
            "matches": [
                "https://www.upwork.com/*/jobs/search/*",
                "https://www.upwork.com/*/find-work/*"
            ],
            "js": [
                "src/content/main.js"
            ]
        }
    ],
    "options_ui": {
        "page": "src/options/options.html",
        "open_in_tab": true
    },
    "icons": {
        "16": "assets/icon.16.png",
        "48": "assets/icon.48.png",
        "128": "assets/icon.128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "lioce@protonmail.com"
        }
    }
}